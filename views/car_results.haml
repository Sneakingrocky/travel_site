.row
  .column.large-3.position-right
    %select{type: "select"}
      %option{value: "Price"} Price (low to high)
      %option{value: "Price"} Price (high to low)

- 5.times do
  .row.collapse
    .flight
      .row 
    
        .column.large-2
          %img{src: "/img/Compact_car.png"}
          .car-price 
            %strong $10/day
        .column.large-7
          .car-name
            Nissan Versa - Compact
          .car-info
            .row.collapse
              .column.large-6
                %ul 
                  %li Unlimited Mileage 
                  %li 5 adults
                  %li 2 Bags
              .column.large-6
                %ul    
                  %li Automatic
                  %li Air Conditioning
        .column.large-3
          %input.book-button.button.postfix{type: "submit", value: "Select Vehicle"}
                      

